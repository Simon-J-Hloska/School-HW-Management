DB architektura:

watch_sessions
- id
- user_name
- video_id
- start_time
- end_time
- duration_seconds

SELECT
    user_name,
    SUM(duration_seconds) AS total_time
FROM watch_sessions
GROUP BY user_name
ORDER BY total_time DESC
LIMIT 10;

